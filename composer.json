{
  "name": "gillyware/postal",
  "description": "Courierâ€‘style DTOs (Packets) for Laravel applications",
  "keywords": [
    "laravel",
    "dto",
    "packet",
    "data transfer object"
  ],
  "type": "library",
  "license": "MIT",

  "authors": [
    {
      "name": "Bradley Johnson",
      "email": "braxey@gillyware.com"
    }
  ],
  "require": {
    "php": "^8.2",
    "ext-json": "*",
    "illuminate/contracts": "^11.0|^12.0",
    "illuminate/http": "^11.0|^12.0",
    "illuminate/routing": "^11.0|^12.0",
    "illuminate/support": "^11.0|^12.0"
  },
  "require-dev": {
    "orchestra/testbench": "^8.18|^9.0|^10.0",
    "pestphp/pest": "^2.0",
    "pestphp/pest-plugin-laravel": "^2.0",
    "laravel/pint": "^1.24",
    "phpstan/phpstan": "^1.11"
  },
  "autoload": {
    "psr-4": {
      "Gillyware\\Postal\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Gillyware\\Postal\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "format": [
      "./vendor/bin/pint"
    ],
    "lint": [
      "./vendor/bin/phpstan analyse --memory-limit=2G"
    ],
    "test": [
      "./vendor/bin/pest"
    ],
    "sweep": [
      "composer format",
      "composer lint",
      "composer test"
    ]
  },
  "extra": {
    "branch-alias": {
      "dev-main": "1.x-dev"
    },
    "laravel": {
      "providers": [
        "Gillyware\\Postal\\Providers\\PostalServiceProvider"
      ]
    }
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  },

  "minimum-stability": "dev",
  "prefer-stable": true
}
